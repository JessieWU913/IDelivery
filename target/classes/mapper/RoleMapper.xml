<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cs.qqq.Mapper.RoleMapper">
    <insert id="addRole">

        INSERT INTO sys_role (role_name, role_sort,create_time
        <if test="remark != null">
            , remark
        </if>
        )
        VALUES (
        #{roleName},
        #{roleSort},
        #{createTime}
        <if test="remark != null">
            , #{remark}
        </if>
        );

    </insert>
    <update id="updateRole">
        update sys_role
        set status=#{status}
        where role_id = #{roleId}
    </update>

    <update id="updateRole1">
        UPDATE sys_role
        SET
        <if test="roleName != null and !roleName.trim().isEmpty()">
            role_name = #{roleName}
        </if>
        <if test="roleSort != null">
            , role_sort = #{roleSort}
        </if>
        <if test="remark != null and !remark.trim().isEmpty()">
            , remark = #{remark}
        </if>
        WHERE role_id = #{roleId}
    </update>


    <select id="getAllRoles" resultType="cs.qqq.Entity.SysRole">
        select *
        from sys_role
    </select>
    <select id="findRoleById" resultType="cs.qqq.Entity.SysRole">
        select *
        from sys_role
        where role_id = #{roleId}
    </select>
    
    <delete id="deleteRole">
        DELETE FROM sys_role WHERE role_id = #{roleId}
    </delete>

</mapper>